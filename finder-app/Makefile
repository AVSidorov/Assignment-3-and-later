CC = gcc
CFLAGS= -Wall -Werror
LDFLAGS=
CROSS_COMPILE=
INCLUDE=

SOURCES=writer.c
OBJECTS=$(SOURCES:.c=.o)
TARGET=writer

CROSS_COMPILE=
     
all: $(TARGET) $(OBJECTS)

$(TARGET): $(OBJECTS)
	$(CROSS_COMPILE)$(CC) $(LDFLAGS) $(OBJECTS) -o $@

$(OBJECTS): $(SOURCES)
	$(CROSS_COMPILE)$(CC) $(CFLAGS) -c $<


clean:
	rm -f $(TARGET) $(OBJECTS)